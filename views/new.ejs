<%  include partials/header %>
<div class="form-container">
   <h1>New Blog:</h1>
<form action="/blogs" method="POST"  class="ui form">
        <div class="field">
          <label>Title </label>
          <input type="text" name="blog[title]" placeholder="Enter Title here">
        </div>
        <div class="field">
          <label>Image</label>
          <input type="text" name="blog[image]" placeholder="Enter Image URL">
        </div>
        <div class="field">
               <label>Body</label>
                <input type="text" name="blog[body]" placeholder="Enter body of the Blog">
              </div>
     
        <button class="ui button" type="submit">Submit</button>
      </form>
    </div>

<% include partials/footer %>